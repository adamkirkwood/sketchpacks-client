{
  "name": "sketchpacks-app",
  "productName": "Sketchpacks",
  "companyName": "Sketchpacks",
  "description": "Discover and manage Sketch Plugins from the menu bar",
  "version": "0.1.1",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "electron": "NODE_ENV=development webpack -p && electron .",
    "web": "NODE_ENV=development webpack -p --target web && webpack-dev-server --target web",
    "build": "NODE_ENV=production webpack -p --progress --profile --colors",
    "build:dist": "NODE_ENV=production webpack -p --progress --profile --colors",
    "pack": "npm run build && build --dir",
    "pack:dev": "npm run build && build --dir",
    "dist": "npm run build && build"
  },
  "author": "Adam Kirkwood <hello@adamkirkwood.com>",
  "license": "ISC",
  "build": {
    "appId": "DGHF878J4A.com.sketchpacks.macos",
    "asar": false,
    "protocols": {
      "name": "Sketchpacks",
      "schemes": [
        "sketchpacks"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    }
  },
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "electron-builder": "^10.6.1",
    "electron-packager": "^8.4.0",
    "electron-prebuilt": "^1.4.11",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "webpack-target-electron-renderer": "^0.3.0"
  },
  "dependencies": {
    "electron-log": "^1.2.2",
    "is-electron-renderer": "^2.0.0",
    "menubar": "^5.1.0",
    "minimist": "^1.2.0",
    "ms": "^0.7.2",
    "node-notifier": "^4.6.1",
    "os": "^0.1.1"
  }
}
